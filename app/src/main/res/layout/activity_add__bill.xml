<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Add_Bill"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request No."
        android:textColor="#575252"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        />

        <TextView
            android:id="@+id/request_no"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:textColorHint="@color/black"
        android:hint="Enter Name"
        android:background="@drawable/box_shape"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />

    <EditText
        android:id="@+id/enter_rollno"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="Enter Roll No."
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@drawable/box_shape"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
     <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/date"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="Select date"
         android:fontFamily="@font/montserrat_semibold"
        android:textColorHint="@color/black"
        android:background="@drawable/box_shape"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />

        <ImageView
            android:id="@+id/datepicker"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginLeft="-120sp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/calender"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/paid_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="Enter Paid Amount"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:background="@drawable/box_shape"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:entries="@array/category_array"
        android:prompt="@string/category_name"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/box_shape" />
    <Button
        android:id="@+id/upload_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Upload Bill"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/button"
        />


</LinearLayout>