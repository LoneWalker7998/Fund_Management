<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
     android:background="#2B363C"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/progress_bar_layout"/>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:theme="@style/CustomCardCorners"
          android:layout_marginTop="@dimen/_70sdp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomCardCorners"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textSize="@dimen/_35sdp"

                        android:textAlignment="center"
                        android:textColor="#000000"
                         />
                    <ImageView
                        android:layout_below="@+id/text"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:src="@drawable/ic_login"
                        android:id="@+id/ic_login"
                        android:layout_centerHorizontal="true"
                        />



                    <EditText
                        android:layout_below="@+id/ic_login"
                         android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                         android:hint="Username"
                        android:textColorHint="@color/black"
                         android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        />

                    <EditText
                        android:layout_below="@id/login_email"
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                         android:hint="Password"
                        android:textColorHint="@color/black"
                         android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:inputType="textPassword"
                        />
                    <Button
                        android:layout_below="@id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:layout_marginRight="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/button"
                        android:textSize="@dimen/_15sdp"
                        android:id="@+id/loginsubmit"
                        android:textAllCaps="false"
                        />

                    <Button
                        android:layout_below="@id/loginsubmit"
                        android:id="@+id/singuppage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Signup"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_50sdp"

                        android:background="@drawable/button" />
                    <TextView
                        android:layout_below="@id/singuppage"
                        android:id="@+id/forgot_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"

                       android:textAlignment="center"
                        android:layout_marginTop="@dimen/_18sdp"
                         android:textSize="@dimen/_15sdp"
                        android:textAllCaps="false"
                        android:text="@string/forgot_password"/>
                    <TextView
                         android:id="@+id/verify_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:textAllCaps="false"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:visibility="gone"
                         android:text="@string/verify_email"
                         android:textColor="#000000"
                        android:layout_below="@+id/forgot_password"
                        android:textAlignment="center"
                        android:textSize="@dimen/_15sdp"/>




                </RelativeLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>