<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Edit_Profile">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center"
            android:src="@drawable/profile_user"

            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"

            />

        <ImageView

            android:id="@+id/camera_img"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/ic_camera"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="-30sp"
            />

    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background = "@color/black"
        android:layout_below="@+id/line"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_person2"
            android:hint="   Name"

            android:paddingLeft="@dimen/_40sdp"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:padding="@dimen/_10sdp"

            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_phone2"
            android:hint="   Phone"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:padding="@dimen/_10sdp"

            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_location2"
            android:hint="   Address"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:padding="@dimen/_10sdp"

            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_lock2"
            android:hint="   New password"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:padding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="   Current Password"
            android:drawableStart="@drawable/ic_password2"
            android:textColorHint="@color/black"
            android:background="@drawable/box_shape"
            android:padding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/bg_btn2"
                android:text="Update"
                android:gravity="center_vertical"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:drawableStart="@drawable/ic_update"
                android:paddingLeft="@dimen/_15sdp"


                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>