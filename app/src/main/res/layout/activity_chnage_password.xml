<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.ChnagePassword">
<include layout="@layout/toolbar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_undraw_my_password_d6kg"/>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_lock2"
        android:hint="   New password"
        android:textColorHint="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:background="@drawable/box_shape"
        android:padding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="   Current Password"
        android:fontFamily="@font/montserrat_regular"
        android:drawableStart="@drawable/ic_password2"
        android:textColorHint="@color/black"
        android:background="@drawable/box_shape"
        android:padding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        />
    <Button
        android:id="@+id/chnage_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chnage Password"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:layout_margin="@dimen/_30sdp"
        android:textSize="@dimen/_15sdp"/>
</LinearLayout>